<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")





</head>

<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Battle Of the Fans", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>



                        @if (Roles.IsUserInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Dashboard", "Index", "Management")</li>
                        }




                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">

        <div class="container">


            <div class="row ">
                <div class="span12">
                    @RenderSection("Navbar", false)

                    @RenderBody()



                </div>
            </div>
        </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/handlebars.js")
    @Scripts.Render("http://connect.facebook.net/en_US/all.js")
    @Scripts.Render("~/Scripts/Facebook.js")

    @Scripts.Render("http://css3-mediaqueries-js.googlecode.com/svn/trunk/css3-mediaqueries.js")
    @RenderSection("scripts", required: false)
</body>
</html>
